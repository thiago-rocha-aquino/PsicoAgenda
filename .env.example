# ====================================
# PsicoAgenda - Environment Variables
# ====================================
# Copy this file to .env and configure your values

# ====================================
# Database
# ====================================
POSTGRES_DB=psicoagenda
POSTGRES_USER=psicoagenda
POSTGRES_PASSWORD=your-secure-database-password

# ====================================
# JWT Security
# ====================================
# IMPORTANT: Generate a secure key for production
# Minimum 256 bits (32 characters)
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-256-bits-long
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ====================================
# Encryption (PII data)
# ====================================
# IMPORTANT: Must be exactly 32 characters for AES-256
ENCRYPTION_SECRET=your-32-character-encryption-key!

# ====================================
# Admin Credentials
# ====================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password
ADMIN_EMAIL=admin@yourdomain.com

# ====================================
# Booking Rules
# ====================================
BOOKING_MIN_ADVANCE_HOURS=12
BOOKING_MAX_ADVANCE_DAYS=90
BOOKING_CANCELLATION_HOURS=24
BOOKING_SLOT_DURATION_MINUTES=15

# ====================================
# Email Notifications (SMTP)
# ====================================
NOTIFICATIONS_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_FROM_EMAIL=noreply@yourdomain.com
NOTIFICATION_FROM_NAME=Consultorio

# ====================================
# Data Retention (LGPD)
# ====================================
RETENTION_ENABLED=false
RETENTION_MONTHS=24

# ====================================
# Frontend
# ====================================
NEXT_PUBLIC_API_URL=http://localhost:8085

# ====================================
# Spring Profile
# ====================================
SPRING_PROFILES_ACTIVE=prod
